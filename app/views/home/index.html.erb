<div class="container">
  <div class="hero">
    <div class="hero-content col-lg-7">
      <h1>The <%= t('journal.name') %> <%= t('journal.tagline') %></h1>
      <p class="lead"><%= t('journal.motto') %></p>
      <div class="hero-ctas">
        <%= link_to t('main.submit', var: t('journal.abbreviation')), new_paper_path, class: "btn" %>
        <%= link_to t('main.volunteer').html_safe, setting(:reviewers_signup_url), class: "btn" %>
      </div>
    </div>

    <div class="hero-nav col-lg-4 offset-lg-1 align-self-end">
      <%= link_to papers_path do %>
      <%= image_tag 'icon_papers.svg' %>
      <%= t('main.explore_papers') %>
      <% end %>
      <%= link_to "https://joss.readthedocs.io/en/latest/" do %>
      <%= image_tag 'icon_docs.svg' %>
      <%= t('main.documentation') %>
      <% end %>
      <%= link_to about_path do %>
      <%= image_tag 'icon_info.svg' %>
      <%= t('main.learn_more') %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h4><%= t('main.recently_published') %> <span class="badge-count"><%= Paper.visible.count %></span></h4>

  <div class="paper-list" id="all-papers">
    <%= render partial: "papers/list", locals: { papers: @papers } %>
  </div>

  <div class="my-5 text-center">
    <%= link_to t('main.view_all_papers').html_safe, published_papers_path, class: "btn", data: { text: t('main.view_all_papers')} %>
  </div>
</div>
